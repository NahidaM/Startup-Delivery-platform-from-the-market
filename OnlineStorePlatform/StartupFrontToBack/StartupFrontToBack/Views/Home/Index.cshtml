@model HomeVM  
@{
    ViewData["Title"] = "Index";
}

<!-- MAIN START -->
<main>
    <div class="middle">
        @foreach (Middle middle in Model.Middles)
        {
            <div class="left">
                <h1>@middle.Name</h1>
                <p><span>100%</span>@middle.Title</p> 
                <a href="#">Buy Now</a>
            </div>
        }
    </div>

    <div class="product"> 
        <h1>Our Products</h1>
        <p>
            Lorem ipsum dolor sit, amet consectetur adipisicing elit. Atque,
            aspernatur!
        </p>
    </div>
    <div class="productnames">
        <div class="productname" style="background-color: #e1ffd9">
            <img src="~/img/milk.webp" alt="" />
            <h1>MILK</h1>
        </div>
        <div class="productname" style="background-color: #ffdedc">
            <img src="~/img/chery.webp" alt="" />
            <h1>FRUIT</h1>
        </div>
        <div class="productname" style="background-color: #dff1ff">
            <img src="~/img/flour.webp" alt="" />
            <h1>FLOUR</h1>
        </div>
        <div class="productname" style="background-color: #fbf9c9">
            <img src="~/img/meat.webp" alt="" />
            <h1>MEAT</h1>
        </div>
        <div class="productname" style="background-color: #ffd8ed">
            <img src="~/img/vegan.webp" alt="" />
            <h1>VEGAN</h1>
        </div>
        <div class="productname" style="background-color: #e1e9fc">
            <img src="~/img/egg.webp" alt="" />
            <h1>EGG</h1>
        </div>
    </div>

    <!-- Product Start-->
    <section id="products">
        <div class="container">
            <div class="row pt-5">
                <div class="col-12 d-flex justify-content-between">
                    <ul class="category-mobile d-md-none list-unstyled">
                        <li>
                            <a href="" class="categories mr-2">Categories</a>
                            <i class="fas fa-caret-down"></i>
                            <ul class="category list-unstyled" style="display: none">
                                <li><a href="" data-id="all">All</a></li>
                                @foreach (Category category in Model.Categories)
                                {
                                    <li><a href="" data-id="@category.Name.ToLower()">@category.Name</a></li>

                                }
                            </ul>
                        </li>
                    </ul>
                    <ul class="category d-none d-md-flex list-unstyled">
                        <li><a href="" data-id="all">All</a></li>
                        @foreach (Category category in Model.Categories)
                        {
                            <li><a href="" data-id="@category.Name.ToLower()">@category.Name</a></li>

                        }
                    </ul>

                </div>
            </div>
            <div class="row">
                @foreach (Product product in Model.Products)
                {
                    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
                        <div class="product-item text-center" data-id="@product.Category.Name.ToLower()">
                            <div class="img">
                                <a href="">
                                    <img style="height: 200px"
                                         src="~/img/@product.Image"
                                         class="img-fluid"
                                         alt="" />
                                </a>
                            </div>
                            <div class="title mt-3">
                                <h6>@product.Title</h6>
                            </div>
                            <div class="price">
                                <span class="text-black-50">Add to cart</span>
                                <span class="text-black-50">$@product.Price</span>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="row">
                @await Component.InvokeAsync("Product", 12) 
            </div> 
        </div>
    </section>
    <!-- Product End-->
</main>

<!-- MAIN END -->
